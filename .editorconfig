# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
curly_bracket_next_line = true
spaces_around_operators = true
insert_final_newline = true
indent_brace_style = 1tbs
spaces_around_brackets = true
max_line_length = 160
quote_type = single 

[*.{html,json}]
quote_type = double

[*.md]
trim_trailing_whitespace = true

[Makefile]
indent_style = tab